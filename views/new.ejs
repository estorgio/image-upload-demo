<% include partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-7 center-block">
      <h1>Upload Image</h1>
      <form action="/upload" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-group">
          <label for="title">Title</label>
          <input type="text" id="title" class="form-control" name="post[title]" placeholder="My image title" required>
        </div>
        <div class="form-group">
          <label for="imagefile">Image</label>
          <input type="file" id="imagefile" name="gallery" accept="image/jpeg,image/png,image/gif" required>
          <p class="help-block">JPG, PNG and GIF files only, max 1 MB.</p>
        </div>
        <div class="form-group">
          <label for="title">Description</label>
          <textarea name="post[description]" id="description" rows="10" class="form-control"
            placeholder="Type description for the image here..."></textarea>
        </div>
        <div class="g-recaptcha" data-sitekey="<%= recaptchaSiteKey %>"></div>
        <br>
        <button type="submit" class="btn btn-primary">Upload image</button>
        <a class="btn btn-link" href="/" role="button">Cancel</a>
      </form>
    </div>
  </div>
</div>

<% include partials/footer %>